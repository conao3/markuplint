{
	"rules": {
		"attr-duplication": true,
		"character-reference": true,
		"deprecated-element": true,
		"doctype": true,
		"id-duplication": true,
		"parse-error": true,
		"permitted-contents": true,
		"required-attr": true,
		"required-h1": true,
		"class-naming": false,
		"attr-equal-space-after": true,
		"attr-equal-space-before": true,
		"attr-spasing": true,
		"attr-value-quotes": true,
		"case-sensitive-attr-name": true,
		"case-sensitive-tag-name": true,
		"indentation": "tab",
		"async-attr-in-script": true,
		"textlint": false,
		"axe": true
	},
	"nodeRules": [
		{
			"tagName": "head",
			"rules": {
				"indentation": {
					"option": {
						"indent-nested-nodes": "never"
					}
				}
			}
		},
		{
			"tagName": "body",
			"rules": {
				"indentation": {
					"option": {
						"indent-nested-nodes": "never"
					}
				}
			}
		}
	]
}
